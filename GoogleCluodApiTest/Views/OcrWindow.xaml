<Window x:Class="GoogleCluodApiTest.Views.OcrWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GoogleCluodApiTest.Views"
        mc:Ignorable="d"
        Title="OcrWindow" Width="720" Height="480">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Button Content="이미지 찾기" Width="120" Height="50"
                Command="{Binding SelectImageCommand}" HorizontalAlignment="Left"/>
        <TextBox Grid.Row="1"
                 Text="{Binding ResultText}"
                 TextWrapping="Wrap"
                 AcceptsReturn="True"
                 VerticalScrollBarVisibility="Auto"/>
    </Grid>
</Window>
