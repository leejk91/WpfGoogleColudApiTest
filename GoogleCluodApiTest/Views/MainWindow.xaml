<Window x:Class="GoogleCluodApiTest.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GoogleCluodApiTest.Views"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <!-- 메인 화면 레이아웃 -->
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Vertical">

            <StackPanel Orientation="Horizontal" Grid.Row="0">
                <Button Content="Text to Speach (TTS)" Margin="10"
                Width="200" Height="80" HorizontalAlignment="Left"
                Command="{Binding OpenTtsCommand}"/>
                <Button Grid.Row="1" Content="Speach to Text (STT)" Margin="10"
                Width="200" Height="80" HorizontalAlignment="Left"
                Command="{Binding OpenSttCommand}"/>
                <Button Grid.Row="1" Content="Optical Character Recognition &#10;               (OCR)" Margin="10"
                Width="200" Height="80" HorizontalAlignment="Left"
                Command="{Binding OpenOcrCommand}"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Button Grid.Row="1" Content="Translation" Margin="10"
                Width="200" Height="80" HorizontalAlignment="Left"
                Command="{Binding OpenTranslationCommand}"/>
                <Button Grid.Row="1" Content="Natural Language Processing &#10;                (NLP)" Margin="10"
                Width="200" Height="80" HorizontalAlignment="Left"
                Command="{Binding OpenNlpCommand}"/>
                <Button Grid.Row="1" Content="Document AI" Margin="10"
                Width="200" Height="80" HorizontalAlignment="Left"
                Command="{Binding OpenDocumentCommand}"/>
            </StackPanel>
        </StackPanel>
        
    </Grid>
</Window>
