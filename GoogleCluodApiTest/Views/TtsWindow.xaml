<Window x:Class="GoogleCluodApiTest.Views.TtsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GoogleCluodApiTest.Views"
        mc:Ignorable="d"
        Title="TtsWindow" Height="720" Width="520">
    <!-- TTS 옵션/입력/실행 UI -->
    <Grid Margin="14">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 옵션 행 -->
        <StackPanel Orientation="Horizontal">
            <StackPanel>
                <TextBlock Text="언어 코드"/>
                <ComboBox Width="140"
                          ItemsSource="{Binding Languages}"
                          SelectedItem="{Binding LanguageCode}"/>
            </StackPanel>

            <StackPanel>
                <TextBlock Text="보이스"/>
                <ComboBox Width="240"
                          ItemsSource="{Binding Voices}"
                          SelectedItem="{Binding SelectedVoice}"
                          DisplayMemberPath="Name"/>
            </StackPanel>

            <Button Content="보이스 새로고침"
                    Command="{Binding RefreshVoicesCommand}"
                    Margin="10,0,0,0"/>
        </StackPanel>

        <!-- 입력 -->
        <DockPanel Grid.Row="1" LastChildFill="True" Margin="0,10,0,10">
            <StackPanel Width="220" Margin="0,0,12,0">
                <TextBlock Text="속도"/>
                <Slider Minimum="0.25" Maximum="4.0" TickFrequency="0.25"
                        Value="{Binding Rate}" IsSnapToTickEnabled="True"/>
                <TextBlock Text="{Binding Rate, StringFormat=F2}"/>

                <TextBlock Margin="0,10,0,0" Text="피치"/>
                <Slider Minimum="-20" Maximum="20" TickFrequency="1"
                        Value="{Binding Pitch}" IsSnapToTickEnabled="True"/>
                <TextBlock Text="{Binding Pitch, StringFormat=F1}"/>

                <TextBlock Margin="0,10,0,0" Text="볼륨(gain dB)"/>
                <Slider Minimum="-10" Maximum="10" TickFrequency="0.5"
                        Value="{Binding Gain}" IsSnapToTickEnabled="True"/>
                <TextBlock Text="{Binding Gain, StringFormat=F1}"/>
            </StackPanel>

            <StackPanel DockPanel.Dock="Right" Width="140" Margin="0,0,0,0" VerticalAlignment="Stretch">
                <Button Content="합성" Height="40" Margin="0,0,0,8"
                        Command="{Binding SynthesizeCommand}"/>
                <Button Content="재생" Height="36" Margin="0,0,0,8"
                        Command="{Binding PlayCommand}"/>
                <Button Content="저장" Height="36"
                        Command="{Binding SaveCommand}"/>
            </StackPanel>

            <StackPanel>
                <TextBlock Text="텍스트" Margin="0,0,0,4"/>
                <TextBox AcceptsReturn="True" TextWrapping="Wrap"
                         VerticalScrollBarVisibility="Auto"
                         Height="320"
                         Text="{Binding Text, UpdateSourceTrigger=PropertyChanged}"/>
            </StackPanel>
        </DockPanel>
    </Grid>
</Window>
