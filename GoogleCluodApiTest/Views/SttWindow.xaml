<Window x:Class="GoogleCluodApiTest.Views.SttWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GoogleCluodApiTest.Views"
        xmlns:Converters="clr-namespace:GoogleCluodApiTest.Converters"
        mc:Ignorable="d"
        Title="SttWindow" Height="720" Width="520">
    <Grid Margin="16" >
        <Grid.Resources>
            <Converters:InverseBoolConverter x:Key="InverseBoolConverter"/>
        </Grid.Resources>

        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal">
            <Button Content="녹음 시작" Command="{Binding StartMicCommand}" IsEnabled="{Binding IsBusy, Converter={StaticResource InverseBoolConverter}}"/>
            <Button Content="녹음 중지" Command="{Binding StopMicCommand}" IsEnabled="{Binding IsListening}"/>
            <Button Content="파일" Command="{Binding TranscribeFileCommand}" IsEnabled="{Binding IsListening, Converter={StaticResource InverseBoolConverter}}"/>
            <Button Content="Clear" Command="{Binding ClearTextCommand}"/>
            <TextBlock Margin="12,0,0,0" VerticalAlignment="Center"
                       Text="{Binding IsListening, StringFormat=Listening: {0}}"/>
            <TextBlock Margin="12,0,0,0" VerticalAlignment="Center"
                       Text="{Binding IsBusy, StringFormat=Busy: {0}}"/>
        </StackPanel>

        <TextBlock Grid.Row="1" Text="Partial (실시간):" FontWeight="Bold"/>
        <TextBox Grid.Row="2" Text="{Binding PartialText}" IsReadOnly="True" TextWrapping="Wrap"
                 VerticalScrollBarVisibility="Auto"/>

        <StackPanel Grid.Row="3">
            <TextBlock Text="Final (확정):" FontWeight="Bold" Margin="0,8,0,4"/>
            <TextBox Text="{Binding FinalText}" IsReadOnly="True" TextWrapping="Wrap" Height="150"
                     VerticalScrollBarVisibility="Auto"/>
        </StackPanel>
    </Grid>
</Window>
